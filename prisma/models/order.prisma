model Order {
  id             Int       @id @default(autoincrement())
  cost           Decimal   @db.Decimal(12, 2)
  profit         Decimal   @db.Decimal(12, 2)
  total          Decimal   @db.Decimal(12, 2)
  method         Method    @default(CASH)
  type           OrderType @default(CASHOUT)
  note           String?   @db.VarChar(255)
  store_id       String
  creator_id     Int?
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  consignment_id Int?

  store                          Store                           @relation(fields: [store_id], references: [id])
  creator                        Employee?                       @relation(fields: [creator_id], references: [id])
  consignment                    Consignment?                    @relation(fields: [consignment_id], references: [id])
  products                       OrderProduct[]
  preOrders                      OrderPreOrder[]
  productStockMovements          ProductStockMovement[]
  orderProductPromotionBuyXGetYs OrderProductPromotionBuyXGetY[]

  @@index([store_id])
  @@index([store_id, created_at])
  @@index([store_id, type])
  @@index([creator_id])
  @@map("orders")
}

model OrderProduct {
  id         Int     @id @default(autoincrement())
  order_id   Int
  product_id Int
  note       String? @db.VarChar(255)
  count      Int
  total      Decimal @db.Decimal(12, 2)
  profit     Decimal @db.Decimal(12, 2)
  cost       Decimal @db.Decimal(12, 2)

  product Product @relation(fields: [product_id], references: [id])
  order   Order   @relation(fields: [order_id], references: [id])

  @@index([order_id])
  @@index([product_id])
  @@map("order_products")
}

model OrderProductPromotionBuyXGetY {
  id                   Int     @id @default(autoincrement())
  order_id             Int
  product_id           Int
  free_count           Int // จำนวนที่ควรจะได้รับจากโปรโมชั่น
  received_count       Int // จำนวนที่ได้รับจากโปรโมชั่น
  total                Decimal @db.Decimal(12, 2) // ราคารวมของสินค้าชิ้นนี้ (snapshot)
  cost                 Decimal @db.Decimal(12, 2) // ต้นทุนของสินค้าที่ได้รับจากโปรโมชั่น (snapshot)
  promotionBuyXGetY_id Int

  product           Product        @relation(fields: [product_id], references: [id])
  order             Order          @relation(fields: [order_id], references: [id])
  promotionBuyXGetY PromotionOffer @relation(fields: [promotionBuyXGetY_id], references: [id])

  @@unique([order_id, product_id, promotionBuyXGetY_id])
  @@index([order_id])
  @@index([product_id])
  @@index([promotionBuyXGetY_id])
  @@map("order_product_promotion_buy_x_get_ys")
}

model OrderPreOrder {
  id              Int            @id @default(autoincrement())
  order_id        Int
  product_id      Int
  note            String?        @db.VarChar(255)
  count           Int
  total           Decimal        @db.Decimal(12, 2)
  profit          Decimal        @db.Decimal(12, 2)
  cost            Decimal        @db.Decimal(12, 2)
  status          PreOrderStatus @default(PENDING)
  returned_at     DateTime?
  returned_by_id  Int?
  cancelled_at    DateTime?
  cancelled_by_id Int?

  product      Product   @relation(fields: [product_id], references: [id])
  order        Order     @relation(fields: [order_id], references: [id])
  returned_by  Employee? @relation("ReturnedPreOrders", fields: [returned_by_id], references: [id])
  cancelled_by Employee? @relation("CancelledPreOrders", fields: [cancelled_by_id], references: [id])

  @@index([order_id])
  @@index([product_id])
  @@index([status])
  @@map("order_preorders")
}

enum Method {
  CASH
  BANK
}

enum OrderType {
  CASHOUT
  PURCHASE
}

enum OrderProductType {
  NORMAL
  OFFER
}

enum PreOrderStatus {
  PENDING
  RETURNED
  CANCELLED
}
