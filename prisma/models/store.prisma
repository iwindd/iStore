model Store {
  id             String            @id @default(cuid())
  slug           String            @unique
  name           String
  categories     Category[]
  products       Product[]
  orders         Order[]
  stock_receipts StockReceipt[]
  employees      Employee[]
  roles          Role[]
  events         Event[]
  broadcasts     Broadcast[]
  applications   LineApplication[]
  consignments   Consignment[]
  addresses      StoreAddress[]
  lineBotConfig  LineBotConfig?
  api_key        String?           @unique

  @@map("stores")
}
